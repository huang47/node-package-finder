doctype 5
html
  head
    title= title
    link(rel="stylesheet", href="http://yui.yahooapis.com/pure/0.3.0/pure-min.css")
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="shortcut icon" href="/images/favicon.ico")
    script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/polymer/0.0.20131107/platform.min.js")
    script(type="text/javascript", src="/js/rx.js")
    script(type="text/javascript", src="/js/rx.time.js")
    script(type="text/javascript", src="/js/input.js")
    script(type="text/javascript", src="/js/template.js")
    template(id="template-search-result")
      li(class="pure-u-1 l-centered" tabindex="-1")
        a(href="#" class="pure-u-1-4 author")
          img(src="" alt="" class="avatar")
        div(class="pure-u-3-4")
          a(href="#", class="l-box sr")
            h2(class="name")
            i(class="fa fa-star pure-u-1-3", alt="github stargazers")
            i(class="fa fa-github pure-u-1-3", alt="author github id")
            i(class="fa fa-users pure-u-1-3", alt="github followers")
            i(class="fa fa-wrench pure-u-1-3", alt="npm package dependents")
            i(class="fa fa-cloud-download pure-u-1-3", alt="npm package downloads")
            i(class="fa test-result pure-u-1-3", alt="travis ci lastest testing result")
          
  body(class="pure-g-r")
    div(class="wrapper pure-u-1 pure-form")
      input(type="search", name="search", class="pure-input-rounded l-centered", placeholder="looking for a module? ;-)" autofocus="autofocus")
    ol(name="results", class="pure-u-1")
    script(type="text/javascript", src="/js/main.js")
